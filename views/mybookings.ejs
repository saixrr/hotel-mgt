<!-- mybookings.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Bookings</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-2xl mb-4">My Bookings</h1>
        <% if (mybookings.length===0) { %>
            <p>You have no bookings.</p>
            <% } else { %>
                <div class="grid grid-cols-1 gap-4">
                    <% mybookings.forEach(function(booking) { %>
                        <div class="bg-white rounded-lg shadow-md p-6">
                            <h2 class="text-lg font-bold mb-2">Hotel Name: <%= booking.hname %>
                            </h2>
                            <p class="text-gray-700">Check-in Date: <%= booking.fromdate %>
                            </p>
                            <p class="text-gray-700">Check-out Date: <%= booking.todate %>
                            </p>
                            <p class="text-gray-700">Price: Rs <%= booking.price %>
                            </p>
                        </div>
                        <% }) %>
                </div>
                <% } %>
    </div>
</body>

</html>